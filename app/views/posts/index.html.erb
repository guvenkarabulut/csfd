<div class="w-full">
  <div class="min-w-full">
    <section class="text-gray-600 body-font overflow-hidden">
      <div class=" mx-auto">
        <div class=" divide-gray-100">
          <div class="flex">
            <div class="max-w-[20em] min-w-[20em] h-[100vh] bg-[#4343bf] px-4">
              <%= form_with url: search_path, method: :get do |form| %>
                <%= form.label :search, "Search", class: "block mt-3 text-sm text-white" %>
              <div class="flex flex-col">
                <%= form.text_field :search, class: "w-full px-5 py-1 text-gray-700 bg-white rounded" %>
                <%= form.submit "Search", class: "p-2 text-[#4343bf] bg-white rounded-md hover:bg-gray-100 hover:text-white" %>
                <br /> 
              </div> 
            <% end %>
            <%= form_with url: search_with_tag_path, method: :get do |form| %>
                <%  Post.tags.keys.each do |tag| %>
                  <%= form.submit tag, class: "p-2 text-[#4343bf] bg-white rounded-md hover:bg-gray-100 hover:text-white" %>
                <% end %>
              <% end %>
            </div>
            <div id="posts" class="px-12">
              <%= render 'posts/posts', posts: @posts %>
              <div class="flex justify-center digg_pagination absolute bottom-0 left-0 right-0 items-center p-4 rounded-b-lg">
               <%#  TODO: Add pagination for search results %>
                <%= will_paginate @posts, page_links: true %>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</div>



