<section id="<%= dom_id post %>">
    <article class="flex flex-col shadow my-4">
        <%= image_tag url_for(post.image), class: "w-full h-[40vh]" if post.image.attached? %>
        <div class=" flex flex-col justify-start p-6">
            <h2 href="#" class="text-blue-700 text-sm font-bold uppercase pb-4"><%= post.tag %></h2>
            <h4 class="text-3xl font-bold hover:text-gray-700 pb-4">
                <%= post.title %>
            </h4>
            <p href="#" class="text-sm pb-8">
            By <a href="#" class="font-semibold hover:text-gray-800">
                <% @user = User.find(post.user_id) %>
                <%= @user.first_name %> <%= @user.last_name %>
            </a>, Published on <%= post.created_at.strftime("%B %d, %Y") %>
            </p>
            <p class="pb-3">
                <%= post.content %>
            </p>
        </div>
    </article>
</section>
